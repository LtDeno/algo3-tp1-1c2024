<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.GameController">
   <HBox>
      <children>
         <Label fx:id="levelLabel" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Level: 1" HBox.hgrow="ALWAYS">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </Label>
         <Label fx:id="scoreLabel" alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Score: 0" textAlignment="RIGHT" HBox.hgrow="ALWAYS">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </Label>
      </children>
   </HBox>
   <StackPane>
      <children>

         <GridPane fx:id="grid">
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
         </GridPane>

         <Canvas fx:id="canvas" height="200.0" width="320.0" StackPane.alignment="TOP_LEFT" />

         <DialogPane fx:id="deathDialog" expanded="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="76.0" prefWidth="202.0" visible="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
             <effect>
                 <DropShadow radius="12.25" width="30.0" />
             </effect>
             <content>
               <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="72.0" prefWidth="202.0" scaleShape="false">
                  <children>
                     <Label alignment="CENTER" prefHeight="124.0" prefWidth="306.0" text="Wow you are so dead!" textAlignment="CENTER" />
                     <Label text="What would you like to do now?" />
                     <HBox alignment="CENTER" prefHeight="41.0" prefWidth="309.0">
                        <children>
                           <Button contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#restartGame" text="Restart" textAlignment="CENTER" translateX="-10.0" />
                           <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#endGame" text="Exit" textAlignment="CENTER" translateX="10.0" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </content>
         </DialogPane>
         <Label fx:id="levelUpLabel" text="Level up!" textFill="WHITE" visible="false">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Label>

      </children>
   </StackPane>

   <HBox alignment="CENTER" prefHeight="70.0">
      <children>
         <Button fx:id="randomTeleportButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" HBox.hgrow="ALWAYS" />
         <Button fx:id="safeTeleportButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" HBox.hgrow="ALWAYS" />
         <Button fx:id="waitForRobotsButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Wait for Robots" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
</VBox>
